{
    "comments": {
        "lineComment": "#",
    },
    "brackets": [
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "(",
            "close": ")",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
    ],
    "autoCloseBefore": ") \n\t",
    "surroundingPairs": [
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*(\\b",
            "end": "^\\s*//\\s*)\\b"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
        "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
        "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\}\\]].*$"
    }
}