{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'cranelisp'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cranelisp",
                    "--package=cranelisp"
                ],
                "filter": {
                    "name": "cranelisp",
                    "kind": "bin"
                }
            },
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel"
            ],
            "args": [
                "./listjit.crl"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable in release mode",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cranelisp",
                    "--package=cranelisp",
                    "--release"
                ],
                "filter": {
                    "name": "cranelisp",
                    "kind": "bin"
                }
            },
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel"
            ],
            "args": [
                "./allocjit.crl"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'cranelisp'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=cranelisp",
                    "--package=cranelisp"
                ],
                "filter": {
                    "name": "cranelisp",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}